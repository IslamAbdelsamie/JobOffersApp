@model IEnumerable<JobOffersApp.Models.Categories>

@{
                /**/

                ViewBag.Title = "Categories";
                Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    @Html.ActionLink("Add New Category", "Create",null ,new { @class = "btn btn-primary" })

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">@TempData["SM"]</div>
}

@if (!Model.Any())
{
    <h1 class="text-center">There is no categories</h1>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>Edit/Delete</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
    </td>
</tr>
}

</table>
}

<script src="~/Scripts/jquery-3.5.1.min.js"></script>

<script>
    $(document).ready(function () {
        $(function () {
            $(".delete").click(function () {
                if (!confirm("Are you sure you want to delete this category?")) {
                    return false;
                }

            });
        });

    });
</script>