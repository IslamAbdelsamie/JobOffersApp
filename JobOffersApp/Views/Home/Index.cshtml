<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    <span>1500+</span> Jobs posted last week
                </h1>

                @using (Html.BeginForm("SearchForJobs", "Jobs", FormMethod.Post, new { @class = "serach-form-area" }))
                {

                    <div class="row justify-content-center form-wrap">
                        <div class="col-lg-4 form-cols form-group">
                            <input type="text" class="form-control" name="search" placeholder="what are you looking for?">
                        </div>
                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects">
                                @Html.DropDownList("Specialization", new SelectList(Model.Specializations, "Id", "SpecializationName"), "Select Specialization")

                            </div>
                        </div>
                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects2">
                                @Html.DropDownList("Category", new SelectList(Model.Categories, "Id", "CategoryName"), "Select Category")
                            </div>
                        </div>
                        <div class="col-lg-2 form-cols form-group">
                            <button type="submit" class="btn btn-info">
                                <span class="lnr lnr-magnifier"></span> Search
                            </button>
                        </div>
                    </div>
                }

                @if (TempData["SM"] != null)
                {
                    <p class="text-danger">@TempData["SM"]</p>
                }
                <p class="text-white"> <span>Search by tags:</span> Tecnology, Business, Consulting, IT Company, Design, Development</p>
            </div>
            </div>
    </div>
</section>
<section class="features-area">
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="single-feature">
                <h4>Searching</h4>
                <p>
                    Search For Your Dream Job
                </p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="single-feature">
                <h4>Applying</h4>
                <p>
                    Easy and Quick Apply 
                </p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="single-feature">
                <h4>Security</h4>
                <p>
                    High Security On Your Data
                </p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="single-feature">
                <h4>Notifications</h4>
                <p>
                    Getting Notification On Time 
                    
                </p>
            </div>
        </div>
    </div>
</div>
</section>
<section class="feature-cat-area pt-100" id="category">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">Featured Job Categories</h1>
                    <p>Who are in extremely love with eco friendly system.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Specializations)
            {
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="single-fcat">
                        <a href="~/Jobs/ListByJobSpecialization/@item.Id">
                            <img src="@Url.Content(item.SpecializationImage)" alt="" width="50" height="50">
                        </a>
                        
                        <p>@item.SpecializationName</p>
                    </div>
                </div>

            }
        </div>
    </div>
   
    

</section>
<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="col-lg-8 post-list">
                @foreach (var item in Model.Jobs)
                {
                    <div class="single-post d-flex flex-row">
                <div class="thumb">
                    <img src="@Url.Content(item.JobImage)" alt="" height="100" width="100">
                    <ul class="tags">
                        <li>
                            @item.Categories.CategoryName
                        </li>
                        <li>
                            @item.Specialization.SpecializationName
                        </li>
                        
                    </ul>
                </div>
                <div class="details">
                    <div class="title d-flex flex-row justify-content-between">
                        <div class="titles">
                            <a href="~/Jobs/Details/@item.Id"><h4>@item.JobName</h4></a>
                        </div>
                       
                    </div>
                    
                    <p>
                        @item.JobDescription
                    </p>
                </div>
            </div>
                }

