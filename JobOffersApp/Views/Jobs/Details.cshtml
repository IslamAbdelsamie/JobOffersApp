@model JobOffersApp.ViewModels.JobsViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Job Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">@TempData["SM"]</div>
}
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Jobs.JobName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jobs.JobName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Jobs.JobDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jobs.JobDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Jobs.JobImage)
        </dt>

        <dd>
            <img src="@Url.Content(Model.Jobs.JobImage)" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Jobs.CategoriesId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jobs.Categories.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Jobs.SpecializationId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Jobs.Specialization.SpecializationName)
        </dd>

    </dl>
</div>
@if (User.IsInRole("Job Seeker"))
{
        @Html.ActionLink("Apply For the Job", "ApplyForJobs", new { id = Model.Jobs.Id },new { @class = "btns" })
}

